<h1>
  <% if params[:key] %>
    <a href="/admin/history">Site History</a> - <%= params[:key] %>
  <% else %>
    Site History
  <% end %>
</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Key</th>
    <th>Date</th>
    <th>Content</th>
  </tr>
  </thead>
  <tbody>
  <% @history.each do |row| %>
  <tr>
    <td class="<%= row[:current] ? 'fw-bold' : '' %>">
      <a href="/admin/history/<%= row[:key] %>">
        <%= row[:key] %>
      </a>
    </td>
    <td><%= row[:datetime] %></td>
    <td><%== row[:text] %></td>
  </tr>
  <% end %>
  </tbody>
</table>
