
<% if logged_in? %>
  <div class="modal fade" id="modal-edit-text" tabindex="-1" aria-labelledby="modal-edit-label" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <form method="post" action="/admin/text">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-edit-label">Edit Text</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="key" id="text-key">
          <textarea class="form-control" rows="20" name="text"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
      </form>
    </div>
  </div>

  <script type="text/javascript">
      let editTextModal = document.getElementById('modal-edit-text');
      editTextModal.addEventListener('show.bs.modal', event => {
          let button = event.relatedTarget;

          editTextModal.querySelector('textarea').value = button.getAttribute('data-bs-text');
          editTextModal.querySelector('#text-key').value = button.getAttribute('data-bs-key');
      })
  </script>
<% end %>
