
<div id="<%= path %>-carousel" class="carousel slide mb-3" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <% count.times do |index| %>
    <button type="button" data-bs-target="#<%= path %>-carousel" data-bs-slide-to="<%= index %>"
            <% if index == 0 %>
            class="active" aria-current="true"
            <% end %>
            aria-label="Slide <%= (index + 1) %>"></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% count.times do |index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <img src="/img/carousel/<%= path %>/<%= index %>.jpg" class="d-block mx-auto img-fluid" alt="<%= alt[index] %>">
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#<%= path %>-carousel" data-bs-slide="prev">
    <span class="fas fa-2xl fa-chevron-left carousel-chevron-left" title="Previous"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#<%= path %>-carousel" data-bs-slide="next">
    <span class="fas fa-2xl fa-chevron-right carousel-chevron-right" title="Next"></span>
  </button>
</div>
