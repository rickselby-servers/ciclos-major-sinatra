<%== erb :_tinymce, locals: { id: 'ride-groups.title' } %>

<div id="ride-groups" class="row row-cols-2 row-cols-md-3 row-cols-lg-5">
  <div class="col">
    <div class="card h-100 text-bg-primary">
      <h4 class="card-header">Espresso / <br> Double Espresso</h4>
      <div class="card-body">
        <p>120-180km</p>
        <p>29km/h+</p>
      </div>
      <div class="card-footer">
        <span class="fa-layers fa-fw fa-4x">
          <span class="fa-solid fa-mountain" data-fa-transform="shrink-4 right-4 down-1.8"></span>
          <span class="fa-solid fa-mountain" data-fa-transform="left-2"></span>
        </span>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card h-100">
      <h4 class="card-header">Americano</h4>
      <div class="card-body">
        <p>120-180km</p>
        <p>26-28km/h</p>
      </div>
      <div class="card-footer">
        <span class="fa-layers fa-fw fa-4x">
          <span class="fa-solid fa-mountain" data-fa-transform="shrink-4 right-4 down-1.8"></span>
          <span class="fa-solid fa-mountain" data-fa-transform="left-2"></span>
        </span>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card h-100">
      <h4 class="card-header">Cappuccino</h4>
      <div class="card-body">
        <p>100-130km</p>
        <p>25km/h</p>
      </div>
      <div class="card-footer"><span class="fas fa-fw fa-mountain fa-4x"></span></div>
    </div>
  </div>
  <div class="col">
    <div class="card h-100">
      <h4 class="card-header">Cafe Late</h4>
      <div class="card-body">
        <p>100-130km</p>
        <p>22-23km/h</p>
      </div>
      <div class="card-footer"><span class="fas fa-fw fa-mountain fa-4x"></span></div>
    </div>
  </div>
  <div class="col">
    <div class="card h-100">
      <h4 class="card-header">Affogato</h4>
      <div class="card-body">
        <p>40-60km</p>
        <p>15-18km/h</p>
        <p>1 or 2 cafe stops</p>
        <p>Easy ride around the area</p>
      </div>
      <div class="card-footer"><span class="fas fa-fw fa-person-biking fa-4x"></span></div>
    </div>
  </div>
</div>

