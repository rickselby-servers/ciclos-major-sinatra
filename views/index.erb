<p class="p-3 fs-3 mb-0 fw-bold text-center tinymce-body" id="index.header">
  <%== get_text('index.header') %>
</p>

<p class="p-3 mb-3 text-bg-primary text-center tinymce-body" id="index.block">
  <%== get_text('index.block') %>
</p>

<div class="row row-cols-1 row-cols-sm-3 row-cols-lg-3 g-4 text-center mb-3">
  <div class="col">
    <div class="card h-100">
      <img src="/img/booking-links/2023-03.jpg" class="card-img-top img-fluid" alt="Cyclists gathered together" aria-hidden="true">
      <div class="card-body">
        <h5 class="card-title">Spring 2023</h5>
        <p class="card-text">4th February - 27th May</p>
      </div>
      <div class="card-footer">
        <a href="/camps/2023-spring" class="btn btn-primary">
          Book Now
        </a>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card h-100">
      <img src="/img/booking-links/2023-09.jpg" class="card-img-top img-fluid" alt="Cyclists looking at a view of the sea" aria-hidden="true">
      <div class="card-body">
        <h5 class="card-title">Autumn 2023</h5>
        <p class="card-text">23rd September - 4th November</p>
      </div>
      <div class="card-footer">
        <a href="/camps/2023-autumn" class="btn btn-primary">
          Book Now
        </a>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card h-100">
      <div class="position-relative d-inline-block">
        <img src="/img/booking-links/2023-312.jpg" class="card-img-top img-fluid" alt="Cyclists finishing the 312 Sportive" aria-hidden="true">
        <% if SOLD_OUT_312 %>
          <div class="position-absolute top-50 start-50 w-100 alert alert-danger"
               style="transform: translate(-50%, -50%) rotate(-5deg); transform-origin: center">Sold out!</div>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title">312 Sportive</h5>
        <p class="card-text">29th April 2023</p>
      </div>
      <div class="card-footer">
        <a href="/camps/2023-312" class="btn btn-primary">
          Book Now
        </a>
      </div>
    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-sm-3 row-cols-lg-3 g-4 text-center mb-3">
  <div class="col">
    <a href="/bike-rental">
    <div class="card h-100">
      <img src="/img/index/bike-rental.jpg" class="card-img-top img-fluid" alt="Team GF Six Disc Di2 Carbon Wheel Bike" aria-hidden="true">
      <div class="card-footer">
        <button class="btn btn-primary">Bike Rental</button>
      </div>
    </div>
    </a>
  </div>

  <div class="col">
    <a href="/ride-groups">
      <div class="card h-100">
        <img src="/img/index/ride-groups.png" class="card-img-top img-fluid" alt="4 cyclists riding down a road" aria-hidden="true">
        <div class="card-footer">
          <button class="btn btn-primary">Ride Groups</button>
        </div>
      </div>
    </a>
  </div>

  <div class="col">
    <a href="/prices/2023.pdf">
      <div class="card h-100">
        <img src="/img/index/prices-2023.jpg" class="card-img-top img-fluid" alt="4 cyclists riding down a road" aria-hidden="true">
        <div class="card-footer">
          <button class="btn btn-primary">2023 Prices</button>
        </div>
      </div>
    </a>
  </div>
</div>

